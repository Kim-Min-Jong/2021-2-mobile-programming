<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/scoreTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="80dp"
            android:text="점수 : "
            android:textColor="#fed231"
            android:textSize="35dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_finalScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#fed231"
            android:textSize="35dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_saveid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreTitle">

        <EditText
            android:id="@+id/id"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="등록할 ID를 입력하세요."></EditText>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="저장"></Button>

    </LinearLayout>

    <TextView
        android:id="@+id/Ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_saveid"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:text="본인기록"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="180dp"
        android:layout_below="@+id/Ranking"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="52dp">

        <TextView
            android:id="@+id/tv_rankid"
            android:layout_width="0dp"
            android:layout_height="159dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_rankscore"
            android:layout_width="0dp"
            android:layout_height="159dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_replay"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="34dp"
        android:layout_toStartOf="@+id/btn_exit"
        android:background="#fed231"
        android:text="처음으로"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="35dp"
        android:background="#fed231"
        android:text="종료"
        android:textStyle="bold"></Button>


</RelativeLayout>